<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.henry.bill.AddActivity">
<RelativeLayout
    android:id="@+id/relativelayout_head"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical"
    android:background="?attr/colorPrimary">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/pay_option"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="支出"
            android:textColor="#FFF"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/get_option"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:layout_toRightOf="@id/pay_option"
            android:text="收入"/>
    </RelativeLayout>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_sort"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center_vertical"
        android:layout_below="@id/relativelayout_head"
        android:layout_margin="10dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/sort_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/line1"
            android:textSize="15sp"
            android:text="账单类型"
            android:layout_margin="3dp"
            android:gravity="center"/>
        <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayout_middle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/relativelayout_sort"
        >
        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="请选择日期"
            android:textSize="15sp"
            android:layout_toRightOf="@id/date_text" />
        <Button
            android:id="@+id/data_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:background="?attr/colorPrimary"
            android:layout_marginLeft="10dp"
            android:text="日期"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_writein"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/relativelayout_middle"
        android:layout_margin="5dp"
        >
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:hint="请输入价格"/>
        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#FFF"
            android:background="?attr/colorPrimary"
            android:layout_alignParentRight="true"
            android:text="提交"/>
    </RelativeLayout>

</RelativeLayout>
